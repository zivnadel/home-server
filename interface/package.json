{
  "name": "interface",
  "productName": "שרת הקבצים",
  "version": "0.1.0",
  "main": ".webpack/main",
  "author": "zivnadel",
  "description": "GUI to communicate with an Express file-managment server",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "interface"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devServer": {
              "liveReload": false,
              "hot": true
            },
            "mainConfig": "./webpack.main.config.js",
            "devContentSecurityPolicy": "default-src 'self' 'unsafe-eval' 'unsafe-inline' http://localhost:*",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./electron/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./electron/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "@electron-forge/plugin-webpack": "6.0.0-beta.67",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-icons": "^3.0.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "autoprefixer": "^10.4.12",
    "css-loader": "^6.0.0",
    "directory-tree": "^3.3.1",
    "electron": "21.1.1",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "node-loader": "^2.0.0",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "postcss": "^8.4.18",
    "postcss-loader": "^7.0.1",
    "style-loader": "^3.0.0",
    "tailwind-merge": "^1.6.2",
    "tailwindcss": "^3.1.8",
    "ts-loader": "^9.2.2",
    "typescript": "~4.5.4",
    "axios": "^1.1.3",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.6.0",
    "react-router-dom": "^6.4.2"
  }
}
